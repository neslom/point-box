<h3>Available Rewards</h3>

<table id="available_rewards">
  <colgroup span="2" class="columns"></colgroup>
  <tr>
    <th>Title</th>
    <th>Worth</th>
  </tr>

  <% @rewards.each do |reward| %>
    <tr>
      <td><%= reward.title %></td>
      <td><%= reward.worth %></td>
      <td><%= link_to "Redeem Reward", redeemed_rewards_path(user_id: current_user.id, reward_id: reward.id), method: :post %></td>
    </tr>
<% end %>
</table>
